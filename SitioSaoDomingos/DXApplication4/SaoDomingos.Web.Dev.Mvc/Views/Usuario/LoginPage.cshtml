@model  SaoDomingos.Web.Dev.Mvc.Models.Usuario
@{
    ViewData["Title"] = "LoginPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Faça o seu Login</h2>

<style>
    span {
        color: red;
        float: left;
        margin-top: 1%;
        margin-left: 1%;
    }
</style>


<br>
<center>
    <h1>Dados Login</h1>
    <br>
    <br>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        <fieldset style="width: 40%;">
            <br />
            <input type="text" class="form-control" name="Nome" placeholder="Digite seu login" />
            @Html.ValidationMessageFor(model => model.Nome)
            <br />
            <br />
            <br />
            <input type="password" class="form-control" name="Senha" placeholder="Digite sua senha" />
            @Html.ValidationMessageFor(model => model.Senha)
            <br />
            <br />
            <br />
            <button type="submit" class="btn btn-primary" style="background-color: mediumseagreen; border: none;">Logar</button>
            <br /><br /><br />

            @if (ViewBag.Erro != null)
            {
                <h3 style="padding: 20px; color: white; background-color: dimgray">
                    @ViewBag.Erro
                </h3>
            }
        </fieldset>
    }
</center>